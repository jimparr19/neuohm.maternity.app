<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.neuohm" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="BackgroundMode">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundMode" />
    </feature>
    <feature name="BLE">
        <param name="android-package" value="com.megster.cordova.ble.central.BLECentralPlugin" />
    </feature>
    <name>neuohm</name>
    <description>
        Mobile gateway for neuohm:maternity project
    </description>
    <author email="jim@neuohm.com" href="https://nueohm.com">
        Neuohm team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="hdpi" src="res/icon/android/mipmap-hdpi/ic_neuohm.png" />
    <icon density="mdpi" src="res/icon/android/mipmap-mdpi/ic_neuohm.png" />
    <icon density="xhdpi" src="res/icon/android/mipmap-xhdpi/ic_neuohm.png" />
    <icon density="xxhdpi" src="res/icon/android/mipmap-xxhdpi/ic_neuohm.png" />
    <icon density="xxxhdpi" src="res/icon/android/mipmap-xxxhdpi/ic_neuohm.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="KeepRunning" value="true" />
    <preference name="AndroidLaunchMode" value="singleInstance" />
</widget>
